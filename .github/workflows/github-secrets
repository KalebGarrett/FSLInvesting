jobs:
  build:
    runs-on: ubuntu-latest
    env:
      APIKEY: ${{ secrets.APIKEY }}
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up .NET
        uses: actions/setup-dotnet@v3
        with:
          dotnet-version: '8.0.x'

      - name: Build project
        run: dotnet build --configuration Release

      - name: Run application
        run: dotnet run
