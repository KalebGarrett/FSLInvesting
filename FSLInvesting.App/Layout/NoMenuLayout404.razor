@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Class="bg-white"></MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
    <MudAppBar Class="bg-white text-center" Bottom="true" Fixed="true">
        <MudText Color="Color.Dark" Class="col-12">Copyright &copy; @CurrentYear FSL Investing</MudText>
    </MudAppBar>
</MudLayout>

@code {
    private int CurrentYear { get; } = DateTime.UtcNow.ToLocalTime().Year;
}