@page "/login"
@layout EmptyMenuLayout

<PageTitle>Login</PageTitle>
<AuthorizeView>
    <Authorized>
        @{
            NavigateToDashboard();
        }
    </Authorized>
    <NotAuthorized>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-6">
                    <form @onsubmit="HandleLogin" class="p-4 rounded-3 shadow" style="background-color: #FFFFFF;">
                        <img class="img-fluid mx-auto d-block" style="width: 250px" src="Images/FSL Logo.png"
                             alt="FSL Investing"/>
                        <div class="form-group">
                            <label for="email" class="medium">Email Address <span class="text-danger">*</span></label>
                            <input @bind="LoginModel.Email" id="email" name="email" type="email" required="required" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="medium">Password <span class="text-danger">*</span></label>
                            <input @bind="LoginModel.Password" id="password" name="password" type="password" required="required" class="form-control">
                        </div>
                        <MudButton Disabled="@CheckInputFields()" type="submit" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Login" Color="Color.Info"
                                   OnClick="HandleLogin" class="mt-3 w-100 rounded-pill">Login
                        </MudButton>
                    </form>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>